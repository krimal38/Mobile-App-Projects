<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditTheWorkoutMode">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Update values for " />

    <TextView
        android:id="@+id/We_add_Names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/text"
        android:textSize="20dp"
        android:text="Value????" />

    <TextView
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:text="Name:" />

    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text"
        android:layout_toRightOf="@+id/nameText"
        android:layout_marginTop="15dp"
        android:hint="Exercise Name?"/>

    <TextView
        android:id="@+id/RepsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameText"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:text="Reps:" />

    <EditText
        android:id="@+id/Reps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_toRightOf="@+id/RepsText"
        android:layout_marginTop="10dp"
        android:inputType="numberDecimal"
        android:hint="Number of Reps?"/>


    <TextView
        android:id="@+id/setReps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RepsText"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:text="Sets:" />

    <EditText
        android:id="@+id/Sets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Reps"
        android:layout_toRightOf="@+id/setReps"
        android:layout_marginTop="10dp"
        android:inputType="numberDecimal"
        android:hint="Number of Sets?"/>


    <TextView
        android:id="@+id/WeightReps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setReps"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:text="Weight:" />

    <EditText
        android:id="@+id/Weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Sets"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/WeightReps"
        android:hint="Weight?"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/NotesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/WeightReps"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:text="Notes:" />

    <EditText
        android:id="@+id/Notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Weight"
        android:layout_toRightOf="@+id/NotesText"
        android:layout_marginTop="15dp"
        android:hint="Notes?"/>

    <Button
        android:id="@+id/AddWorkout"
        android:layout_width="900dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Notes"
        android:textSize="20dp"
        android:text="UPDATE EXISTING IN WORKOUT" />

    <Button
        android:id="@+id/Cancel"
        android:layout_width="900dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AddWorkout"
        android:textSize="20dp"
        android:text="CANCEL" />


</RelativeLayout>