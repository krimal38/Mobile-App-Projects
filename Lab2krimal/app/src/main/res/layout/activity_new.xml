<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewActivity">




    <EditText
        android:id="@+id/Excellent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="15dp"
        android:inputType="number"
        android:hint="Excellent" />
    <EditText
        android:id="@+id/Average"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/Excellent"
        android:layout_marginTop="20dp"
        android:inputType="number"
        android:hint="Average" />
    <EditText
        android:id="@+id/Lacking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/Average"
        android:layout_marginTop="20dp"
        android:inputType="number"
        android:hint="Lacking" />

    <Button
        android:id="@+id/UpdateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Lacking"
        android:layout_marginTop="50dp"
        android:ems="15"
        android:layout_centerHorizontal="true"
        android:text="UPDATE MY TIP PERCENTAGES" />


</RelativeLayout>